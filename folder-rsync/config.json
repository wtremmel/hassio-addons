{
  "name": "Folder Rsync",
  "version": "0.0.9.1",
  "slug": "folderrsync",
  "description": "Transfers the Hass.io folders to a remote rsync server.",
  "url" : "https://github.com/carstenschroeder/hassio-addons/blob/master/README.md",
  "startup": "once",
  "boot": "manual",
  "arch": [
    "aarch64",
    "amd64",
    "armhf",
    "armv7",
    "i386"
  ],
  "host_network": true,
  "privileged": [
    "NET_ADMIN"
  ],
  "map": ["config", "addons", "backup", "share", "ssl", "media"],
  "options": {
	  "rsyncserver": "server",
    "rootfolder": "hassio-sync",
    "username": "user",
    "password": "password"
  },
  "schema": {
	  "rsyncserver": "str",
    "rootfolder": "str",
    "username": "str",
    "password": "str"
  }
}
